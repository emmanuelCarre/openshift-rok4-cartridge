#!/bin/bash
#set -e

source $OPENSHIFT_CARTRIDGE_SDK_BASH

cp -r $OPENSHIFT_ROK4_DIR/usr/rok4/config $OPENSHIFT_REPO_DIR/

cp -r $OPENSHIFT_ROK4_DIR/usr/nginx/config $OPENSHIFT_REPO_DIR/

ROK4_LAYERS_DIR=$OPENSHIFT_ROK4_DIR/usr/rok4/config/layers

if [ -f "$ROK4_LAYERS_DIR/SCAN1000_JPG_LAMB93_FXX.lay.erb" ]; then
	oo-erb $ROK4_LAYERS_DIR/SCAN1000_JPG_LAMB93_FXX.lay.erb > $ROK4_LAYERS_DIR/SCAN1000_JPG_LAMB93_FXX.lay.erb
fi

